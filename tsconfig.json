{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "lib": ["es5", "es6", "dom", "dom.iterable"]
  }
}
